generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  image     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  progress  Progress[]
  feedbacks Feedback[]
  reports   Report[]
}

model Progress {
  id        String   @id @default(uuid())
  char      String   @db.VarChar(10)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  accuracy  Int      @db.Integer()
  input     String?
  completed Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([char, userId])  
}

model Feedback {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  message   String
  rating    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  issue     String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
